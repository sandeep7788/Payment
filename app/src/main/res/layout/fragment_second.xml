<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".SecondFragment">
        <View
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/round_shape" />


        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="8dp"

                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                android:orientation="vertical"
                android:weightSum="2">



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E3BE24" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="0.5dp"
                    android:background="@color/theme_color" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="8dp"
                        android:foregroundGravity="center"
                        android:padding="10dp"
                        android:src="@drawable/baseline_info_24" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="-8dp"
                        android:fontFamily="@font/intel"
                        android:foregroundGravity="center|left"
                        android:gravity="center|left"
                        android:text="Reports"
                        android:textColor="@color/text_color"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E3BE24" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="0.5dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                android:background="@color/theme_color" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="15dp"
                android:elevation="10dp"
                android:outlineSpotShadowColor="@color/black"
                android:paddingBottom="15dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="4dp"
                app:contentPaddingBottom="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <!--                        <TextView-->
                    <!--                            android:layout_width="match_parent"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:layout_gravity="center"-->
                    <!--                            android:layout_marginLeft="5dp"-->
                    <!--                            android:layout_marginTop="15dp"-->
                    <!--                            android:layout_marginBottom="20dp"-->
                    <!--                            android:fontFamily="@font/intel"-->
                    <!--                            android:foregroundGravity="center|left"-->
                    <!--                            android:gravity="center|left"-->
                    <!--                            android:text="Recharge &amp; Bill Payments"-->
                    <!--                            android:textColor="@color/text_color"-->
                    <!--                            android:textSize="14dp"-->
                    <!--                            android:textStyle="bold" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/btn_ele_bil"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginBottom="2dp"
                                android:background="@drawable/bg_cercular_shape"
                                android:backgroundTint="@color/theme_color_light"
                                android:foregroundGravity="center"
                                android:padding="10dp"
                                android:src="@drawable/wallet" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/intel"
                                android:foregroundGravity="center"
                                android:gravity="center"
                                android:text="Wallet\nReport"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_recharge"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginBottom="2dp"
                                android:background="@drawable/bg_cercular_shape"
                                android:backgroundTint="@color/theme_color_light"
                                android:foregroundGravity="center"
                                android:padding="10dp"
                                android:src="@drawable/prepaid" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/intel"
                                android:foregroundGravity="center"
                                android:gravity="center"
                                android:text="Recharge\nReport"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btnFund"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginBottom="2dp"
                                android:background="@drawable/bg_cercular_shape"
                                android:backgroundTint="@color/theme_color_light"
                                android:foregroundGravity="center"
                                android:padding="10dp"
                                android:src="@drawable/exchange" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/intel"
                                android:foregroundGravity="center"
                                android:gravity="center"
                                android:text="Fund Request\nReport"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/btn_bbps"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginBottom="2dp"
                                android:background="@drawable/bg_cercular_shape"
                                android:backgroundTint="@color/theme_color_light"
                                android:foregroundGravity="center"
                                android:padding="14dp"
                                android:src="@drawable/icon_bbps" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/intel"
                                android:foregroundGravity="center"
                                android:gravity="center"
                                android:text="BBPS\nReport"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btnPayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginBottom="2dp"
                                android:background="@drawable/bg_cercular_shape"
                                android:backgroundTint="@color/theme_color_light"
                                android:foregroundGravity="center"
                                android:padding="10dp"
                                android:src="@drawable/pay" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/intel"
                                android:foregroundGravity="center"
                                android:gravity="center"
                                android:text="Payout\nReport"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btnXPress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginBottom="2dp"
                                android:background="@drawable/bg_cercular_shape"
                                android:backgroundTint="@color/theme_color_light"
                                android:foregroundGravity="center"
                                android:padding="10dp"
                                android:src="@drawable/exchange" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/intel"
                                android:foregroundGravity="center"
                                android:gravity="center"
                                android:text="X-Press Payout\nReport"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/btn_dmp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginBottom="2dp"
                                android:background="@drawable/bg_cercular_shape"
                                android:backgroundTint="@color/theme_color_light"
                                android:foregroundGravity="center"
                                android:padding="10dp"
                                android:src="@drawable/ic_person_outline_white_24dp"
                                app:tint="@color/them_dark_color" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/intel"
                                android:foregroundGravity="center"
                                android:gravity="center"
                                android:text="DMT\nReport"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_cabeltv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginBottom="2dp"
                                android:background="@drawable/bg_cercular_shape"
                                android:backgroundTint="@color/theme_color_light"
                                android:foregroundGravity="center"
                                android:padding="10dp"
                                android:src="@drawable/scan"
                                app:tint="@color/them_dark_color" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/intel"
                                android:foregroundGravity="center"
                                android:gravity="center"
                                android:text="UPI\nReport"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_credit_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginBottom="2dp"
                                android:background="@drawable/bg_cercular_shape"
                                android:backgroundTint="@color/theme_color_light"
                                android:foregroundGravity="center"
                                android:padding="10dp"
                                android:src="@drawable/ic_credit_card" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/intel"
                                android:foregroundGravity="center"
                                android:gravity="center"
                                android:text="UTI\nReport"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</layout>