<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="9dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="9dp"
    app:cardCornerRadius="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="4dp"
    android:elevation="4dp">

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtName"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:fontFamily="@font/intel"
            android:foregroundGravity="center"
            android:gravity="center|start"
            android:text="Harry Poter"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            android:textColor="@color/text_color"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:foregroundGravity="center"
                android:layout_weight="1"
                android:gravity="center|start|top">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start|top"
                    android:fontFamily="@font/intel"
                    android:textStyle="bold"
                    android:foregroundGravity="center|top"
                    android:gravity="center|start|top"
                    android:text="Account No."
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_title" />

                <TextView
                    android:id="@+id/txtAcNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:fontFamily="@font/intel"
                    android:foregroundGravity="center"
                    android:gravity="center|start"
                    android:text="1345654567"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/text_color"
                    android:layout_marginStart="4dp"
                    android:textSize="@dimen/text_title" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center|start|top"
                android:foregroundGravity="center"
    >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:fontFamily="@font/intel"
                    android:foregroundGravity="center"
                    android:gravity="center|start"
                    android:text="Bank Name"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_title" />

                <TextView
                    android:id="@+id/txtBankName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center|start"
                    android:fontFamily="@font/intel"
                    android:foregroundGravity="center"
                    android:gravity="center|start"
                    android:text="jdsakjdsajdsajdsakjdsajdsajdsakjdsajdsajdsakjdsajdsajdsakjdsajdsajdsakjdsajdsajdsakjdsajdsa"
                    android:textColor="@color/text_color"
                    android:layout_marginStart="4dp"
                    android:textSize="@dimen/text_title" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:foregroundGravity="center"
                android:gravity="center|start|top"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:fontFamily="@font/intel"
                    android:foregroundGravity="center"
                    android:gravity="center|start"
                    android:text="IFSC Code"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_title" />

                <TextView
                    android:id="@+id/txtIfscCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/intel"
                    android:foregroundGravity="center"
                    android:gravity="center|start"
                    android:text="WQREQ1234"
                    android:textColor="@color/text_color"
                    android:layout_marginStart="4dp"
                    android:textSize="@dimen/text_title" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTransfer"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:elevation="4dp"
            android:layout_marginEnd="8dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:layout_marginBottom="4dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_gradient1"
            android:text="Transfer"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/edtBeneName"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txtDelete"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:elevation="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bg_gradient_red"
            android:text="Delete"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/edtBeneName"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>